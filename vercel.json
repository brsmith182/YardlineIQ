{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // 1. ADD THIS RULE: Check for static image assets first.
    { 
      "src": "/images/(.*)", 
      "dest": "/images/$1"
    },
    // 2. KEEP THIS RULE: Redirect everything else (including your main pages) to server.js.
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}
